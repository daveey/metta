{
    "[yaml]":{
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        },
        "editor.autoIndent": "none",
      },
      "yaml.schemas": {
        "envs/griddly/gdy-schema.json": "envs/griddly/forage/*.yaml"
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.analysis.extraPaths": ["../sample-factory"],
    "pylint.args": [
			"--rcfile",
			"./.pylintrc"
		],

}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Griddly",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.train",
            "args": [
                "--experiment=mac.pres",


                "--algo=APPO",
                "--device=cpu",
                "--restart_behavior=restart",
                "--env=GDY-PowerGrid",
                "--save_every_sec=60",
                "--experiment_summaries_interval=10",
                "--lr_schedule=kl_adaptive_epoch",
                "--decorrelate_experience_max_seconds=100",
                "--serial=True",
                // "--async_rl=False",
                // "--batch_size=1792",

                // "--with_wandb=True",
                "--num_workers=8",
                "--env_num_agents=20",

                "--env_chargers_per_agent=1:10",
                "--env_agent:initial_energy=50",
                "--env_width=20:70",
                "--env_height=20:70",
                "--load_checkpoint_kind=best",

                // "--normalize_input=False",
                "--aux_loss_coef=0.1",
                // "--train_for_env_steps=1000"
                // "--with_pbt=True",
                // "--num_policies=4",

            ],
        },
        {
            "name": "Evaluate",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.enjoy",
            "args": [
                // "--experiment=pred.10.0",
                // "--experiment=g.mac",
                // "--experiment=pred.200.0",
                "--experiment=m1.conf_obs",

                "--device=cpu",
                "--serial=True",
                "--train_dir=./train_dir/",
                // "--no_render",
                // "--save_video",
                // "--video_name=griddly",
                "--fps=10",
                "--max_num_frames=1000",
                "--eval_env_frameskip=1",
                "--env=GDY-PowerGrid",
                "--env_num_agents=20",
                "--env_width=40",
                "--env_height=40",
                "--env_agent:initial_energy=50",
                "--env_chargers_per_agent=1.5",
                "--env_wall_density=0",
                "--load_checkpoint_kind=best",
            ],
        },
        {
            "name": "Play",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.play",
            "args": [
                "--fps=10",
                "--max_num_frames=1000",
                "--eval_env_frameskip=1",
                "--env=GDY-PowerGrid",
                "--env_num_agents=20",
                "--env_width=70",
                "--env_height=70",
                "--env_agent:initial_energy=50",
                "--env_chargers_per_agent=.1",
                "--env_wall_density=0.05",
            ],
        },
                {
            "name": "Render Replay",
            "type": "debugpy",
            "request": "launch",
            "module": "util.render_replay_to_video",
            "args": [
                "--replay_path=/tmp/sample_factory_replays/0_0.replay.yaml",
                "--video_path=/tmp/sample_factory_replays/0_0.mp4",
                "--fps=30",
            ],
        },
                {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_griddly_training",
            "args": [
                "-k",
                "test_8x8",
            ],
        }
    ]
}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Griddly",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.train",
            "args": [
                "--algo=APPO",
                "--device=cpu",
                "--env=GDY-Forage",
                "--experiment=g.decoder",
                "--save_every_sec=5",
                "--experiment_summaries_interval=10",
                "--lr_schedule=kl_adaptive_epoch",
                // "--decorrelate_experience_max_seconds=100",
                "--serial=True",
                "--async_rl=False",
                // "--with_wandb=True",
                "--num_workers=4",
                "--batch_size=1792",
                "--forage.num_agents=7",

                // "--with_pbt=True",
                // "--num_policies=4",
            ],
        },
        {
            "name": "Run Griddly",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.enjoy",
            "args": [
                "--algo=APPO",
                "--device=cpu",
                "--serial=True",
                "--train_dir=./train_dir/",
                // "--no_render",
                // "--save_video",
                // "--video_name=griddly",
                "--fps=10",
                "--max_num_frames=1000",
                "--eval_env_frameskip=1",
                "--env=GDY-Forage",
                "--experiment=decoder",
                "--forage.num_agents=2",

                "--forage.width_min=5",
                "--forage.width_max=6",
                "--forage.height_min=5",
                "--forage.height_max=6",
                "--forage.energy_per_agent=2",
                "--forage.wall_density=0",
            ],
        }
    ]
}

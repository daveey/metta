    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Metta",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.run",
            "preLaunchTask": "build_cython_extensions",
            "args": [
                "experiment=mac.sf.1",
                "framework=pufferlib",
                "hardware=macbook",
                "env=mettagrid/a20_b4_40x40",
                // "env=mettagrid/a20_b4_40x40",
                "cmd=train",
                "env.game.max_steps=1000",
                "env.kinship.team_size=5",
                "env.kinship.team_reward=0.8",
                // "env.substrate_name=running_with_scissors_in_the_matrix__arena",

                // "sample_factory.aux_loss_coeff=0.1",

                // "framework.wandb.track=True",

                // "sample_factory.wandb_project=mp_rws"
                // "+sample_factory.restart_behavior=restart",
                // "sample_factory.num_workers=2",

                // "+env.extra_variables=2",
                // "--restart_behavior=restart",

                // "--config=sandbox_agent",
                // "--agent_embedding_layers=0",
                // "--agent_fc_skip=True",
                // "--serial=True",

                // "--normalize_input=False",

                // common setting
                // "--async_rl=False",
                // "--batch_size=1792",
                // "--with_wandb=True",

                // sandbox settings
                // "--device=cpu",

                // "--train_for_env_steps=1000"

            ],
        },
        {
            "name": "Evaluate SF",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.run",
            "args": [
                "framework=sample_factory",
                "cmd=evaluate",
                "experiment=mac.sf.1",
                "env=mettagrid/behaviors/resources/competition/10x10_2a",
            ],
        },
        {
            "name": "Evaluate PL",
            "type": "debugpy",
            "request": "launch",
            "module": "tools.run",
            "args": [
                "framework=pufferlib",
                "cmd=evaluate",
                "experiment=mac.puffer.2",
                "env=mettagrid/behaviors/resources/competition/10x10_2a",
            ],
        },
        {
            "name": "Perf Env",
            "type": "debugpy",
            "request": "launch",
            "module": "env.mettagrid.test_perf",
            "preLaunchTask": "build_cython_extensions",
            "args": [

                "cmd=train",

                "env=mettagrid/a20_b4_40x40",
                // "env.game.num_agents=40",
                // "train.device=cpu",
                // "mode=eval",
                // "env=grid",
                // "render-mode=human",
            ],
        },
        {
            "name": "Puffergrid Forage Perf",
            "type": "debugpy",
            "request": "launch",
            "module": "test_perf",
            "preLaunchTask": "build_cython_extensions",
            "args": [
                // "--profile"
                "--num_agents=50",
                // "env.game.num_agents=40",
                // "train.device=cpu",
                // "mode=eval",
                // "env=grid",
                // "render-mode=human",
            ],
            "cwd": "${workspaceFolder}/third_party/puffergrid"
        },
        {
            "name": "Dump Griddly Config",
            "type": "debugpy",
            "request": "launch",
            "module": "env.griddly.dump_griddly_config",
            "args": [
                "env=mettagrid/a5_25x25"
                // "env=mettagrid/a5_25x25"
            ],
        },
        {
            "name": "Play",
            "type": "debugpy",
            "request": "launch",
            "module": "env.griddly.play",
            "args": [
                "--fps=10",
                "--max_num_frames=1000",
                "--eval_env_frameskip=1",
                "--env=GDY-PowerGrid",
                "--env_num_agents=20",
                "--env_width=70",
                "--env_height=70",
                "--env_agent:energy:initial=50",
                "--env_chargers=5",
                "--env_wall_density=0.05",
            ],
        },
                {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_griddly_training",
            "args": [
                "-k",
                "test_8x8",
            ],
        },
        {
            "name": "Run Evals",
            "type": "debugpy",
            "request": "launch",
            "module": "evals.evals",
            "args": [
                "--experiment=mac.pres10",
                "--device=cpu",
                "--train_dir=./train_dir/",
                "--eval_env_frameskip=1",
                "--max_num_episodes=1",
                "--env_max_steps=100",
            ],
        },
        {
            "name": "Run Mettagrid",
            "type": "debugpy",
            "request": "launch",
            "module": "env.mettagrid.mettagrid",
            "preLaunchTask": "build_cython_extensions",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
              "PYTHONPATH": "${workspaceFolder}"
            },
            "presentation": {
              "hidden": false,
              "panel": "shared",
              "clear": true,
              "group": "",
              "order": 1
            },
          },
    ]
}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train Griddly",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.train",
            "args": [
                "--algo=APPO",
                "--device=cpu",
                "--env=GDY-Forage",
                "--experiment=g.pred.35",
                "--save_every_sec=5",
                "--experiment_summaries_interval=10",
                "--lr_schedule=kl_adaptive_epoch",
                // "--decorrelate_experience_max_seconds=100",
                "--serial=True",
                "--async_rl=False",
                // "--with_wandb=True",
                "--num_workers=4",
                "--batch_size=1792",
                "--forage.num_agents=7",
                "--forage.prediction_error_reward=0.01",
                "--forage.energy_per_agent=1",

                // "--with_pbt=True",
                // "--num_policies=4",
            ],
        },
        {
            "name": "Run Griddly",
            "type": "debugpy",
            "request": "launch",
            "module": "envs.griddly.enjoy",
            "args": [
                "--experiment=norm_pred.01",

                "--device=cpu",
                "--serial=True",
                "--train_dir=./train_dir/",
                // "--no_render",
                // "--save_video",
                // "--video_name=griddly",
                "--fps=10",
                "--max_num_frames=1000",
                "--eval_env_frameskip=1",
                "--env=GDY-Forage",
                "--forage.num_agents=30",

                "--forage.width_min=20",
                "--forage.width_max=201",
                "--forage.height_min=20",
                "--forage.height_max=201",
                "--forage.energy_per_agent=1",
                "--forage.wall_density=0.15",
                "--forage.prediction_error_reward=0",
            ],
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_griddly_training",
            "args": [
                "-k",
                "test_2x2_predict",
            ],
        }
    ]
}

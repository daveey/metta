{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build_cython_extensions",
        "type": "shell",
        "command": "python setup.py build_ext --inplace",
        "problemMatcher": [
          {
            "owner": "python",
            "fileLocation": ["relative", "${workspaceFolder}"],
            "pattern": [
              {
                "regexp": "^Error compiling Cython file:$",
                "message": 1
              },
              {
                "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "message": 4
              }
            ]
          },
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
            "reveal": "always",
            "panel": "shared",
            "clear": true,
            "focus": true
          },
        "options": {
          "cwd": "${workspaceFolder}"
        },
      },
    ]
  }
